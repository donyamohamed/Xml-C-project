<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <RootNamespace>Attendance_Management_System</RootNamespace>
    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <ApplicationIcon>Webalys-Kameleon.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Forms\TeacherForm1.cs" />
    <Compile Remove="Forms\TeacherForm1.Designer.cs" />
    <Compile Remove="Forms\TeacherForm2.cs" />
    <Compile Remove="Forms\TeacherForm2.Designer.cs" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Remove="Forms\TeacherForm1.resx" />
    <EmbeddedResource Remove="Forms\TeacherForm2.resx" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="class.xml" />
    <None Remove="classSchema.xsd" />
    <None Remove="classSchema2.xsd" />
    <None Remove="courses.xml" />
    <None Remove="courseSchema.xsd" />
    <None Remove="courseSchema2.xsd" />
    <None Remove="users.xml" />
    <None Remove="userSchema.xsd" />
    <None Remove="usershema2.xsd" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="class.xml" />
    <Content Include="classSchema.xsd" />
    <Content Include="classSchema2.xsd" />
    <Content Include="courses.xml" />
    <Content Include="courseSchema.xsd" />
    <Content Include="courseSchema2.xsd" />
    <Content Include="users.xml" />
    <Content Include="userSchema.xsd" />
    <Content Include="usershema2.xsd" />
    <Content Include="Webalys-Kameleon.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="DocumentFormat.OpenXml" Version="3.0.1" />
    <PackageReference Include="EPPlus" Version="7.0.9" />
    <PackageReference Include="iTextSharp" Version="5.5.13.3" />
    <PackageReference Include="Microsoft.Office.Interop.Excel" Version="15.0.4795.1001" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

</Project>